# Database Configuration
POSTGRES_DSN=postgres://transit_user:transit_pass@localhost:5432/transit_db?sslmode=disable

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Server Configuration
PORT=8080
ENV=development

# API Configuration
API_TIMEOUT=30s
MAX_CONNECTIONS=100

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=1m

# Caching
CACHE_TTL_DEFAULT=5m
CACHE_TTL_STATIC=1h
CACHE_TTL_REALTIME=30s

# External APIs
OVAPI_BASE_URL=http://v0.ovapi.nl
GTFS_FEED_URL=https://gtfs.ovapi.nl/nl/gtfs-nl.zip

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
API_KEY_HEADER=X-API-Key
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-API-Key